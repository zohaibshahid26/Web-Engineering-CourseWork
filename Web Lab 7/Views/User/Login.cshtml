@{
	Layout = "_Landing";
}
<form asp-action="Login" asp-controller="User">
    <div class="min-vh-100 p-5" style="background:#f0f8ff;">
        <div class="d-flex align-items-center justify-content-center mt-5">
            <div class="card  border shadow p-5 rounded-2 w-50 mx-5">
                <div class="card-header bg-white my-3">
                    <h3 class="text-primary text-center">Login</h3>
                </div>
                
                <div class="mb-3">
                    <label for="exampleInputEmail1" class="form-label">Email address</label>
                    <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" required style="background:#f0f8ff;">
                </div>
                <div class="mb-3">
                    <label for="exampleInputPassword1" class="form-label">Password</label>
                    <input type="password" class="form-control" id="exampleInputPassword1" required style="background:#f0f8ff;">
                </div>
                <div class="mb-3 form-check">
                    <input type="checkbox" class="form-check-input" id="exampleCheck1">
                    <label class="form-check-label" for="exampleCheck1">Show Password</label>
                </div>
                <button type="submit" class="btn btn-primary">Login</button>
                <div class="card-footer">
                    <p>New User? <a href="/User/Register">Create an account</a></p>
                </div>
            </div>
        </div>
    </div>
</form>