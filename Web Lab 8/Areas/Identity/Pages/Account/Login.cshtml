@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
    Layout = "_Landing";
}
<div class="row">
    <div class="col">
       <div class="p-4 w-100" style="background:#f0f8ff;">
          <div class="d-flex align-content-center justify-content-center mt-5">
               <div class="card  border shadow p-5 rounded-3">
                    <div class="card-header bg-white my-3">
                        <h3 class="text-primary text-center">Login</h3>
                    </div>
                    <form id="account" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                        <div class="form-floating mb-3">
                            <input asp-for="Input.Email" class="form-control px-2 w-100" style="background:#f0f8ff;" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                            <label asp-for="Input.Email" class="form-label">Email</label>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-3">
                            <input asp-for="Input.Password" class="form-control px-2 w-100" style="background:#f0f8ff;" autocomplete="current-password" aria-required="true" placeholder="password" />
                            <label asp-for="Input.Password" class="form-label">Password</label>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <div class="d-flex justify-content-between gap-5">
                            <div class="form-check mb-3 mx-2">
                                <input type="checkbox" class="form-check-input border-black" style="background:#f0f8ff;" id="showPassword">
                                <label class="form-check-label" for="showPassword">Show Password</label>
                            </div>

                            <div class="checkbox mb-3">
                                <label asp-for="Input.RememberMe" class="form-label">
                                    <input class="form-check-input border-black" asp-for="Input.RememberMe" />
                                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                                </label>
                            </div>
                        </div>
                        <div class="p-3">
                            <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Log in</button>
                        </div>
                    </form>
                    <div class="card-footer bg-white my-3">
                        <p>New user?<a class="text-primary mx-2" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Create an Account!</a>
                        </p>
                    </div>
               </div>
               
          </div>
       </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
